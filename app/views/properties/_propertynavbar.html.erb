<section class="dashboard-header">
  <div class="dashboard-container">

    <div class="dashboard-row">
      <div class="col-lg-6">
        <%= link_to properties_path, class: "d-flex align-items-center back-btn" do %>
          <i class="fa-sharp fa-solid fa-arrow-left-long"></i>
          <p>All Properties</p>
        <% end %>
        <h2 class="dash-property text-start"><%= @property.address %></h2>
      </div>

      <div class="col-lg-6 d-flex align-items-center justify-content-end">
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" id="add-transaction-button">
          +Add Transaction
        </button>
      </div>
    </div>

  </div>


</section>
