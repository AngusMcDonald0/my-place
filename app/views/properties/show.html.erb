<div class = "container mt-3">

  <%= render "key_statistics", property: @property %>
  <div class="container">
   <br>
    <%revenue = @property.transactions.revenues.sum(:amount)%>
    <%expense = @property.transactions.expenses.sum(:amount)%>
    <%= bar_chart [["revenue", revenue],["expense", expense]],colors: ["#f5cac3", "#f7ede2", "#f5cac3", "#84a59d", "#f28482"], donut:true, title: @property.address %>
    <br>
  </div>


  </div>
  <div class="row justify-content-center">
    <div class="col-6">
      <%= render "transactions/form" %>
    </div>
  </div>

  <div class="section bg-warning bg-gradient p-3 mb-3 mt-3">
    <%= render "transactions" %>
  </div>
</div>
