<div>
  <div class="container h-100 col-6">
    <div class="h-100 d-flex flex-column align-items-center justify-content-center">
      <div class="w-100 rounded bg-secondary bg-opacity-50 p-5 shadow-lg">
        <h1 class="mb-4 text-decoration-underline">Add a Property</h1>
        <%= simple_form_for(@property, html: { class: "w-100" }) do |f| %>
          <div class="row mb-4">
            <div class="col-6">
              <%= f.input :address, placeholder: "51 Stewart Street, Richmond, VIC" %>
            </div>
            <div class="col-6">
              <%= f.input :bedrooms, collection: (1..5), include_blank: false %>
            </div>
          </div>
          <%= f.input :property_type, :collection => %w[Unit House], as: :radio_buttons, wrapper_html: { class: "mb-4"},
                collection_wrapper_tag: 'div',
                collection_wrapper_class: 'category-wrapper',
                item_wrapper_class: 'category-item',
                input_html: {class: 'category-selector'},
                collection: Property::CATEGORIES %>
          <%= f.input :photo, as: :file, wrapper_html: { class: "mb-4" } %>
          <%= f.submit class: "btn btn-primary w-50 rounded-pill" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
