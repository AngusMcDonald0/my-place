<% expense =@property.transactions.expenses.sum(:amount)%>
<% revenue = @property.transactions.revenues.sum(:amount)%>
<% total = revenue - expense %>

<div class="row overviewGutter">
  <div class="col-md-4">
    <div class="panel">
      <div class="statsOverview--panel">
        <div class="statsOverview--header">
          <p class="statsOverview--headerIn">
            IN
          </p>
          <p class="statsOverview--headerInPercentage">
            <i class="fa fa-level-up-alt"></i>
            <%# <span>23%</span> %>
          </p>
        </div>

        <div class="statsOverview--body">
          <div class="row">
            <div class="col-8">
              <p class="statsOverview--rangeIn">Monthly</p>
              <h3 class="statsOverview--label">Revenue</h3>
              <p class="statsOverview--dollarIn">$<%= revenue.round() %></p>
            </div>
            <div class="col-4">
              <i class="fa-solid fa-money-bill-trend-up"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="panel">
      <div class="statsOverview--panel">
        <div class="statsOverview--header">
          <p class="statsOverview--headerOut">
            OUT
          </p>
          <p class="statsOverview--headerOutPercentage">
            <i class="fa fa-level-down-alt"></i>
            <%# <span>10%</span> %>
          </p>
        </div>

        <div class="statsOverview--body">
          <div class="row">
            <div class="col-8">
              <p class="statsOverview--rangeOut">Monthly</p>
              <h3 class="statsOverview--label">Expenses</h3>
              <p class="statsOverview--dollarOut">$<%=expense.round()%></p>
            </div>
            <div class="col-4">
              <i class="fa-solid fa-money-bill-trend-up" id="moneyflip"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="panel">
      <div class="statsOverview--panel">
        <div class="statsOverview--header">
          <p class="statsOverview--headerTotal">
            TOTAL
          </p>
          <p class="statsOverview--headerTotalPercentage">
            <i class="fa-solid fa-hand-holding-dollar"></i>
            <%# <span>23%</span> %>
          </p>
        </div>

        <div class="statsOverview--body">
          <div class="row">
            <div class="col-8">
              <p class="statsOverview--rangeTotal">Monthly</p>
              <h3 class="statsOverview--label">Total</h3>
              <p class="statsOverview--dollarTotal">$<%=total.round()%></p>
            </div>
            <div class="col-4">
              <i class="fa-solid fa-money-bill-transfer"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
